      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="407.0" prefWidth="424.0">
         <children>
            <BorderPane layoutX="-2.0" layoutY="2.0" prefHeight="405.0" prefWidth="135.0">
               <center>
                  <AnchorPane minWidth="80.0" prefHeight="405.0" prefWidth="120.0" style="-fx-background-color: #ee204d;" BorderPane.alignment="CENTER">
                     <children>
                        <Label layoutX="20.0" layoutY="103.0" prefHeight="31.0" prefWidth="115.0" text="CALORIE" textAlignment="CENTER" textFill="#00f5cc">
                           <font>
                              <Font name="Franklin Gothic Medium Italic" size="21.0" />
                           </font>
                        </Label>
                        <Label layoutX="24.0" layoutY="135.0" prefHeight="31.0" prefWidth="108.0" text="COUNT" textAlignment="CENTER" textFill="#00f5cc">
                           <font>
                              <Font name="Franklin Gothic Medium Italic" size="21.0" />
                           </font>
                        </Label>
                        <Label layoutX="37.0" layoutY="166.0" prefHeight="31.0" prefWidth="81.0" text="APP" textAlignment="CENTER" textFill="#00f5cc">
                           <font>
                              <Font name="Franklin Gothic Medium Italic" size="21.0" />
                           </font>
                        </Label>
                     </children></AnchorPane>
               </center>
            </BorderPane>
            <TextField fx:id="username" layoutX="249.0" layoutY="179.0" promptText="Enter Username" />
