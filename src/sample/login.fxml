            </Label>
            <PasswordField fx:id="password" layoutX="250.0" layoutY="214.0" promptText="Enter Password" />
            <ImageView fitHeight="71.0" fitWidth="132.0" layoutX="200.0" layoutY="67.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/login%20lock.jpg" />
               </image>
            </ImageView>
            <Label fx:id="wronglogin" layoutX="141.0" layoutY="152.0" prefHeight="25.0" prefWidth="271.0" textFill="RED">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <Label layoutX="149.0" layoutY="182.0" text="Enter Username" />
            <Label layoutX="150.0" layoutY="218.0" text="Enter Password" />
            <Button fx:id="adminlogin" layoutX="150.0" layoutY="333.0" mnemonicParsing="false" onAction="#adminLogin" prefHeight="36.0" prefWidth="84.0" style="-fx-background-color: #ffc900;" text="Admin Login" />
            <Button fx:id="newAccountbtn" layoutX="268.0" layoutY="333.0" mnemonicParsing="false" onAction="#newAccount" prefHeight="36.0" prefWidth="135.0" style="-fx-background-color: #ffc900;" text="Create New Account" />
